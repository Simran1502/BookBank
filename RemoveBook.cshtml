@model BookBank.Models.Book

<h2>Delete Book</h2>

<p>Are you sure you want to delete this book?</p>

<table border="1" cellpadding="8">
    <tr>
        <th>Book Name</th>
        <td>@Model.BookName</td>
    </tr>
    <tr>
        <th>Genre</th>
        <td>@Model.Genre</td>
    </tr>
    <tr>
        <th>Status</th>
        <td>@(Model.AvailabilityStatus ? "Available" : "Not Available")</td>
    </tr>
</table>

<br />

<form asp-action="RemoveBook" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Delete</button>
    <a asp-action="ViewAllBooks">Cancel</a>
</form>
